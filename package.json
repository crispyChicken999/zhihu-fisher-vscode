    "configuration": {
      "title": "知乎摸鱼",
      "properties": {
        "zhihu-fisher.mediaDisplayMode": {
          "type": "string",
          "enum": [
            "none",
            "mini",
            "normal"
          ],
          "enumDescriptions": [
            "隐藏模式(不显示图片视频)",
            "迷你模式(图片视频缩小显示)",
            "正常模式(正常显示图片视频)"
          ],
          "default": "normal",
          "description": "文章中媒体资源（图片、视频等）的显示方式。"
        },
        "zhihu-fisher.miniMediaScale": {
          "type": "number",
          "minimum": 1,
          "maximum": 100,
          "default": 50,
          "description": "迷你模式下图片视频的缩放比例（1-100%）。"
        },
        "zhihu-fisher.customChromePath": {
          "type": "string",
          "default": "",
          "description": "自定义谷歌Chrome 浏览器路径。如果设置了，插件将使用此路径的浏览器，而不是 Puppeteer 安装的 Chrome 浏览器。",
          "scope": "machine"
        },
        "zhihu-fisher.cookie": {
          "type": "string",
          "default": "",
          "description": "知乎Cookie设置。用于访问需要登录的内容和完整评论。设置后可以获得更好的浏览体验。",
          "scope": "application"
        },
        "zhihu-fisher.enableDisguise": {
          "type": "boolean",
          "default": true,
          "description": "启用智能伪装功能。当 WebView 失去焦点时，自动将标题、图标和整个界面伪装成真实的代码编辑界面，支持32种编程语言的动态代码生成，完美融入开发环境，让摸鱼更加隐蔽 (～￣▽￣)～。"
        },
        "zhihu-fisher.selectedDisguiseTypes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "智能伪装模式下用户选择的文件类型。如果为空，则使用所有可用的文件类型进行随机伪装。（请在Fisher 外观设置-功能增强 中进行修改，自行添加项可能导致运行异常）"
        },
        "zhihu-fisher.debugMode": {
          "type": "boolean",
          "default": false,
          "description": "启用调试模式。开启后，浏览器将以可见模式运行，方便调试和排查问题。修改此设置需要重启扩展才能生效。",
          "scope": "application"
        },
        "zhihu-fisher.answersPerBatch": {
          "type": "number",
          "minimum": 5,
          "maximum": 50,
          "default": 10,
          "description": "每批预加载的回答数量。只有达到该数量才会停止加载更多(限制范围5-50)。数值越小加载越快，小于10可能不生效。不建议修改的太大，因为会触发知乎的反爬虫机制，可能会导致Cookie提前失效！"
        }
      }
    }
