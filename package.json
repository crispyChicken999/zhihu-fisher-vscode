{
  "name": "zhihu-fisher",
  "displayName": "Zhihu Fisher",
  "description": "VSCode摸鱼神器 使用MarkDown来刷知乎热榜和推荐 提供无图片模式（beta）",
  "version": "0.0.3",
  "author": "CrispyChicken",
  "engines": {
    "vscode": "^1.99.0"
  },
  "repository": {
    "type": "git",
    "url": "https://www.github.com/CrispyChicken999/zhihu-fisher"
  },
  "icon": "./icon.png",
  "publisher": "CrispyChicken",
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "zhihu-fisher.refreshHotList",
        "title": "刷新热榜",
        "icon": "$(refresh)"
      },
      {
        "command": "zhihu-fisher.refreshRecommendList",
        "title": "刷新推荐",
        "icon": "$(refresh)"
      },
      {
        "command": "zhihu-fisher.openArticle",
        "title": "打开文章"
      },
      {
        "command": "zhihu-fisher.setCookie",
        "title": "设置知乎Cookie",
        "icon": "$(key)"
      },
      {
        "command": "zhihu-fisher.clearCookie",
        "title": "清除知乎Cookie",
        "icon": "$(trash)"
      },
      {
        "command": "zhihu-fisher.toggleImageDisplay",
        "title": "显示/隐藏图片",
        "icon": {
          "light": "$(image)",
          "dark": "$(image)"
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "zhihu-fisher",
          "title": "知乎摸鱼",
          "icon": "$(book)"
        }
      ]
    },
    "views": {
      "zhihu-fisher": [
        {
          "id": "zhihuRecommendList",
          "name": "推荐",
          "icon": "$(star)",
          "contextualTitle": "知乎推荐"
        },
        {
          "id": "zhihuHotList",
          "name": "热榜",
          "icon": "$(flame)",
          "contextualTitle": "知乎热榜"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "zhihuHotList",
        "contents": "加载知乎热榜中...\n[刷新](command:zhihu-fisher.refreshHotList)\n[设置Cookie](command:zhihu-fisher.setCookie)"
      },
      {
        "view": "zhihuRecommendList",
        "contents": "加载知乎推荐中...\n[刷新](command:zhihu-fisher.refreshRecommendList)\n[设置Cookie](command:zhihu-fisher.setCookie)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "zhihu-fisher.refreshHotList",
          "when": "view == zhihuHotList",
          "group": "navigation@1"
        },
        {
          "command": "zhihu-fisher.refreshRecommendList",
          "when": "view == zhihuRecommendList",
          "group": "navigation@1"
        },
        {
          "command": "zhihu-fisher.setCookie",
          "when": "view == zhihuHotList || view == zhihuRecommendList"
        },
        {
          "command": "zhihu-fisher.clearCookie",
          "when": "view == zhihuHotList || view == zhihuRecommendList"
        },
        {
          "command": "zhihu-fisher.toggleImageDisplay",
          "when": "view == zhihuHotList || view == zhihuRecommendList"
        }
      ]
    },
    "configuration": {
      "title": "知乎摸鱼",
      "properties": {
        "zhihu-fisher.hideImages": {
          "type": "boolean",
          "default": false,
          "description": "无图片模式：启用后加载文章时不显示图片"
        },
        "zhihu-fisher.cookie": {
          "type": "string",
          "default": "",
          "description": "知乎Cookie，用于访问需要登录的内容",
          "scope": "machine"
        },
        "zhihu-fisher.cookieExpirationReminder": {
          "type": "number",
          "default": 30,
          "description": "Cookie过期提醒天数（设置cookie后多少天提醒更新）",
          "scope": "machine"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.25.1",
    "eslint": "^9.23.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "cheerio": "^1.0.0",
    "marked": "^15.0.8",
    "puppeteer": "^24.6.1"
  }
}
