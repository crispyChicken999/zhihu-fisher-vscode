    "configuration": {
      "title": "知乎摸鱼",
      "properties": {
        "zhihu-fisher.mediaDisplayMode": {
          "type": "string",
          "enum": [
            "none",
            "mini",
            "normal"
          ],
          "enumDescriptions": [
            "隐藏模式(不显示图片视频)",
            "迷你模式(图片视频缩小显示)",
            "正常模式(正常显示图片视频)"
          ],
          "default": "normal",
          "description": "文章中媒体资源（图片、视频等）的显示方式。"
        },
        "zhihu-fisher.miniMediaScale": {
          "type": "number",
          "minimum": 1,
          "maximum": 100,
          "default": 50,
          "description": "迷你模式下图片视频的缩放比例（1-100%）。"
        },
        "zhihu-fisher.customChromePath": {
          "type": "string",
          "default": "",
          "description": "自定义谷歌Chrome 浏览器路径。如果设置了，插件将使用此路径的浏览器，而不是 Puppeteer 安装的 Chrome 浏览器。",
          "scope": "machine"
        },
        "zhihu-fisher.enableDisguise": {
          "type": "boolean",
          "default": true,
          "description": "启用智能伪装功能。当 WebView 失去焦点时，自动将标题和图标伪装成代码文件，更好地摸鱼，避免被老板/同事发现(～￣▽￣)～。"
        },
        "zhihu-fisher.cookie": {
          "type": "string",
          "default": "",
          "description": "知乎Cookie设置。用于访问需要登录的内容和完整评论。设置后可以获得更好的浏览体验。",
          "scope": "application"
        }
      }
