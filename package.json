{
  "name": "zhihu-fisher",
  "displayName": "Zhihu Fisher",
  "description": "VSCode 刷知乎摸鱼插件 | 支持浏览知乎推荐、热榜、搜索内容，提供沉浸模式、图片大小调整、灰色模式、智能伪装模式。支持评论区、收藏夹等功能。",
  "version": "0.3.1",
  "author": "CrispyChicken",
  "engines": {
    "vscode": "^1.82.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/crispyChicken999/zhihu-fisher-vscode"
  },
  "icon": "./icon.png",
  "publisher": "CrispyChicken",
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "zhihu-fisher.refreshHotList",
        "title": "刷新热榜",
        "icon": "$(refresh)"
      },
      {
        "command": "zhihu-fisher.refreshRecommendList",
        "title": "刷新推荐",
        "icon": "$(refresh)"
      },
      {
        "command": "zhihu-fisher.dislikeRecommendItem",
        "title": "不喜欢该内容(减少推荐)",
        "icon": "$(thumbsdown)"
      },
      {
        "command": "zhihu-fisher.favoriteRecommendItem",
        "title": "收藏到收藏夹",
        "icon": "$(star)"
      },
      {
        "command": "zhihu-fisher.favoriteSearchItem",
        "title": "收藏到收藏夹",
        "icon": "$(star)"
      },
      {
        "command": "zhihu-fisher.dislikeAuthor",
        "title": "不再推荐该作者(屏蔽作者)",
        "icon": "$(account)"
      },
      {
        "command": "zhihu-fisher.searchContent",
        "title": "搜索知乎内容",
        "icon": "$(search)"
      },
      {
        "command": "zhihu-fisher.refreshCollections",
        "title": "刷新收藏夹",
        "icon": "$(refresh)"
      },
      {
        "command": "zhihu-fisher.loadMoreCollectionItems",
        "title": "加载更多收藏项",
        "icon": "$(arrow-down)"
      },
      {
        "command": "zhihu-fisher.openCollectionItem",
        "title": "打开收藏项"
      },
      {
        "command": "zhihu-fisher.refreshCollection",
        "title": "刷新收藏夹",
        "icon": "$(refresh)"
      },
      {
        "command": "zhihu-fisher.openCollectionInBrowser",
        "title": "在浏览器中打开收藏夹",
        "icon": "$(link-external)"
      },
      {
        "command": "zhihu-fisher.openCollectionItemInBrowser",
        "title": "在浏览器中打开",
        "icon": "$(link-external)"
      },
      {
        "command": "zhihu-fisher.showCollectionItemImage",
        "title": "查看图片",
        "icon": "$(zoom-in)"
      },
      {
        "command": "zhihu-fisher.openArticle",
        "title": "打开文章"
      },
      {
        "command": "zhihu-fisher.openInBrowser",
        "title": "在浏览器中打开",
        "icon": "$(link-external)"
      },
      {
        "command": "zhihu-fisher.showFullImage",
        "title": "放大缩略图",
        "icon": "$(zoom-in)"
      },
      {
        "command": "zhihu-fisher.setCookie",
        "title": "设置Cookie",
        "icon": "$(key)"
      },
      {
        "command": "zhihu-fisher.clearCookie",
        "title": "清除Cookie",
        "icon": "$(trash)"
      },
      {
        "command": "zhihu-fisher.clearCollectionCache",
        "title": "清理收藏夹缓存",
        "icon": "$(clear-all)"
      },
      {
        "command": "zhihu-fisher.setMediaModeNormal",
        "title": "正常显示",
        "icon": "$(eye)"
      },
      {
        "command": "zhihu-fisher.setMediaModeMini",
        "title": "小图模式（设置中可指定缩放比例）",
        "icon": "$(screen-normal)"
      },
      {
        "command": "zhihu-fisher.setMediaModeNone",
        "title": "全部隐藏",
        "icon": "$(eye-closed)"
      },
      {
        "command": "zhihu-fisher.configureBrowser",
        "title": "配置浏览器",
        "icon": "$(browser)"
      },
      {
        "command": "zhihu-fisher.setCustomChromePath",
        "title": "自定义浏览器路径",
        "icon": "$(folder-opened)"
      },
      {
        "command": "zhihu-fisher.openFeedback",
        "title": "问题反馈与建议",
        "icon": "$(feedback)"
      },
      {
        "command": "zhihu-fisher.starOnGitHub",
        "title": "觉得不错？GitHub上点颗星吧~",
        "icon": "$(star-full)"
      },
      {
        "command": "zhihu-fisher.buyMeCoffee",
        "title": "请开发者喝杯咖啡",
        "icon": "$(heart)"
      },
      {
        "command": "zhihu-fisher.showAbout",
        "title": "关于",
        "icon": "$(info)"
      },
      {
        "command": "zhihu-fisher.showGuide",
        "title": "使用说明",
        "icon": "$(book)"
      },
      {
        "command": "zhihu-fisher.restartExtension",
        "title": "重新启动扩展",
        "icon": "$(refresh)"
      },
      {
        "command": "zhihu-fisher.showTroubleshootingGuide",
        "title": "故障排除指引",
        "icon": "$(tools)"
      },
      {
        "command": "zhihu-fisher.refreshMyCollections",
        "title": "刷新我创建的收藏夹",
        "icon": "$(refresh)"
      },
      {
        "command": "zhihu-fisher.refreshFollowingCollections",
        "title": "刷新我关注的收藏夹",
        "icon": "$(refresh)"
      },
      {
        "command": "zhihu-fisher.loadMoreMyCollections",
        "title": "加载更多我创建的收藏夹",
        "icon": "$(arrow-down)"
      },
      {
        "command": "zhihu-fisher.loadMoreFollowingCollections",
        "title": "加载更多我关注的收藏夹",
        "icon": "$(arrow-down)"
      },
      {
        "command": "zhihu-fisher.openMyCollectionsInBrowser",
        "title": "在浏览器中打开我创建的收藏夹",
        "icon": "$(link-external)"
      },
      {
        "command": "zhihu-fisher.openFollowingCollectionsInBrowser",
        "title": "在浏览器中打开我关注的收藏夹",
        "icon": "$(link-external)"
      },
      {
        "command": "zhihu-fisher.removeFromCollection",
        "title": "取消收藏",
        "icon": "$(notebook-delete-cell)"
      },
      {
        "command": "zhihu-fisher.createCollection",
        "title": "创建收藏夹",
        "icon": "$(add)"
      },
      {
        "command": "zhihu-fisher.deleteCollection",
        "title": "删除收藏夹",
        "icon": "$(trash)"
      },
      {
        "command": "zhihu-fisher.toggleDisguise",
        "title": "切换智能伪装",
        "icon": "$(eye)"
      },
      {
        "command": "zhihu-fisher.showDisguiseCache",
        "title": "查看伪装缓存状态",
        "icon": "$(info)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "zhihuFisher",
          "title": "知乎摸鱼",
          "icon": "$(book)"
        }
      ]
    },
    "views": {
      "zhihuFisher": [
        {
          "id": "zhihuRecommendList",
          "name": "推荐",
          "icon": "$(star)",
          "contextualTitle": "知乎推荐"
        },
        {
          "id": "zhihuHotList",
          "name": "热榜",
          "icon": "$(flame)",
          "contextualTitle": "知乎热榜"
        },
        {
          "id": "zhihuSearchList",
          "name": "搜索",
          "icon": "$(search)",
          "contextualTitle": "知乎搜索"
        },
        {
          "id": "zhihuCollectionsList",
          "name": "收藏",
          "icon": "$(bookmark)",
          "contextualTitle": "知乎收藏"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "zhihuRecommendList",
        "contents": "加载知乎推荐中...\n[刷新](command:zhihu-fisher.refreshHotList)\n[设置Cookie](command:zhihu-fisher.setCookie)\n\n如果遇到浏览器问题，可以尝试：\n[安装浏览器](command:zhihu-fisher.configureBrowser)\n[自定义浏览器路径](command:zhihu-fisher.setCustomChromePath)"
      },
      {
        "view": "zhihuHotList",
        "contents": "加载知乎热榜中..."
      },
      {
        "view": "zhihuSearchList",
        "contents": "点击搜索按钮查找知乎内容..."
      },
      {
        "view": "zhihuCollectionsList",
        "contents": "加载知乎收藏中..."
      }
    ],
    "submenus": [
      {
        "id": "zhihu-fisher.mediaDisplayMenu",
        "label": "图片视频显示方式"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "zhihu-fisher.refreshHotList",
          "when": "view == zhihuHotList",
          "group": "navigation@1"
        },
        {
          "command": "zhihu-fisher.refreshRecommendList",
          "when": "view == zhihuRecommendList",
          "group": "navigation@1"
        },
        {
          "command": "zhihu-fisher.searchContent",
          "when": "view == zhihuSearchList",
          "group": "navigation@1"
        },
        {
          "command": "zhihu-fisher.refreshCollections",
          "when": "view == zhihuCollectionsList",
          "group": "navigation@1"
        },
        {
          "command": "zhihu-fisher.toggleDisguise",
          "when": "view == zhihuHotList || view == zhihuRecommendList || view == zhihuSearchList || view == zhihuCollectionsList",
          "group": "bmode@1"
        },
        {
          "submenu": "zhihu-fisher.mediaDisplayMenu",
          "when": "view == zhihuHotList || view == zhihuRecommendList || view == zhihuSearchList || view == zhihuCollectionsList",
          "group": "bmode@2"
        },
        {
          "command": "zhihu-fisher.configureBrowser",
          "when": "view == zhihuHotList || view == zhihuRecommendList || view == zhihuSearchList || view == zhihuCollectionsList",
          "group": "config@1"
        },
        {
          "command": "zhihu-fisher.setCookie",
          "when": "view == zhihuHotList || view == zhihuRecommendList || view == zhihuSearchList || view == zhihuCollectionsList",
          "group": "config@2"
        },
        {
          "command": "zhihu-fisher.clearCookie",
          "when": "view == zhihuHotList || view == zhihuRecommendList || view == zhihuSearchList || view == zhihuCollectionsList",
          "group": "config@3"
        },
        {
          "command": "zhihu-fisher.clearCollectionCache",
          "when": "view == zhihuHotList || view == zhihuRecommendList || view == zhihuSearchList || view == zhihuCollectionsList",
          "group": "config@4"
        },
        {
          "command": "zhihu-fisher.restartExtension",
          "when": "view == zhihuHotList || view == zhihuRecommendList || view == zhihuSearchList || view == zhihuCollectionsList",
          "group": "troubleshoot@1"
        },
        {
          "command": "zhihu-fisher.showTroubleshootingGuide",
          "when": "view == zhihuHotList || view == zhihuRecommendList || view == zhihuSearchList || view == zhihuCollectionsList",
          "group": "troubleshoot@2"
        },
        {
          "command": "zhihu-fisher.openFeedback",
          "when": "view == zhihuHotList || view == zhihuRecommendList || view == zhihuSearchList || view == zhihuCollectionsList",
          "group": "ysupport@1"
        },
        {
          "command": "zhihu-fisher.buyMeCoffee",
          "when": "view == zhihuHotList || view == zhihuRecommendList || view == zhihuSearchList || view == zhihuCollectionsList",
          "group": "ysupport@2"
        },
        {
          "command": "zhihu-fisher.starOnGitHub",
          "when": "view == zhihuHotList || view == zhihuRecommendList || view == zhihuSearchList || view == zhihuCollectionsList",
          "group": "ysupport@3"
        },
        {
          "command": "zhihu-fisher.showGuide",
          "when": "view == zhihuHotList || view == zhihuRecommendList || view == zhihuSearchList || view == zhihuCollectionsList",
          "group": "zhelp@1"
        },
        {
          "command": "zhihu-fisher.showAbout",
          "when": "view == zhihuHotList || view == zhihuRecommendList || view == zhihuSearchList || view == zhihuCollectionsList",
          "group": "zhelp@2"
        }
      ],
      "zhihu-fisher.mediaDisplayMenu": [
        {
          "command": "zhihu-fisher.setMediaModeNormal",
